@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,900')
html, body
	margin 0
	width 100vw
	height 100vh
	font-family 'Montserrat'
	a
		text-decoration none
		color inherit
.menu
	width 100%
	height 70px
	padding 10px
	position fixed
	top 0 !important
	background transparent
	color white
	box-sizing border-box
	display flex
	align-items center
	justify-content space-between
	&__slot
		height 100%
		display flex
		align-items center
		justify-content center
	&__button
		height 100%
		min-width 120px
		margin-left 15px
		cursor pointer
		padding 10px 20px
		box-sizing border-box
		display flex
		align-items center
		justify-content center
		text-transform uppercase
		transition-duration .1s
		&:hover
			background white
			color #333
			opacity .9
.header
	width 100vw
	height 100%
	margin 0
	padding 10px
	box-sizing border-box
.headline
	display block
	position absolute
	top 90px
	left 60px
	width 65vw
	font-weight 900
	font-size 5.5em
	color white

