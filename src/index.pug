html
	head
		title Gradientify.js
		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='stylesheet' type='text/css' href='css/style.css')
		link(rel='stylesheet' type='text/css' href='https://cdn.rawgit.com/karolsw2/gradientify.js/06564801/build/gradientify.css')
	body
		.menu
			.menu__slot
				a.menu__button(target='_blank' href='https://github.com/karolsw2/gradientify.js') Gradientify.js
			.menu__slot
				a.menu__button(target='_blank' href='https://github.com/karolsw2/') My Github
					.tooltip Karol Åšwierczek
				a.menu__button.menu__button--primary(target='_blank' href='https://github.com/karolsw2/gradientify.js/tree/master/build') Download
					.tooltip Latest stable: v.3.0.0
		.header#header
			.headline
				p Animated backgrounds made easy
		#presets
			.presets
				.preset(v-for='preset in presets')
					.preset__title {{preset.name}}
					.preset__gradient(:id='preset.id')
					.preset__credits Hash: <b>{{preset.id}}</b>
		script(src='https://cdn.jsdelivr.net/npm/vue@2.5.13/dist/vue.js')
		script(src='https://rawgit.com/karolsw2/gradientify.js/master/build/gradientify.js')
		script(src='js/index.js')